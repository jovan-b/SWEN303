extends ../node_modules/jade-bootstrap/_bootstrap

head
	title= title
block body
	+navbar("Colenso Project", "dropdown_menu")
		+nav_item("/", "") Home
		+nav_item("/browseall", "") Browse Documents
		+nav_item("/upload", "active") Upload
		
	.container
		h1= 'Upload XML document'
	.container
		if reportMsg != undefined
			+alert-info(reportMsg)
		h3= 'Upload file to database'
		form(action='/upload', method='post', enctype="multipart/form-data")
			input(type="file", name="file")
			button.btn.btn-default(type="submit") Upload to database